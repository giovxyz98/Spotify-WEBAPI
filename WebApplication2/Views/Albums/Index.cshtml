@model IEnumerable<WebApplication2.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Genere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnoDiPubblicazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnoDiPubblicazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistNavigation.NomeDArte)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Titolo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Titolo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Titolo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
